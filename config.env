DATA_DIR=/data/qwen-bench
OUTPUT_DIR=./output
HF_HOME=/data/qwen-bench/.cache
HF_DATASETS_CACHE=/data/qwen-bench/.cache/datasets

# Model
MODEL_NAME=Qwen/Qwen2.5-VL-7B-Instruct
TEMPLATE=qwen2_vl

# Dataset
DATASET=pseudo_camera
DATA_SAMPLES=50000

# Fine-tuning
FINETUNING_TYPE=lora
LORA_RANK=8
LORA_ALPHA=16
LORA_TARGET=all
LORA_DROPOUT=0.05

# Training
SEED=42
NUM_TRAIN_EPOCHS=1
MAX_STEPS=-1
PER_DEVICE_BATCH_SIZE=1
GA=8
CUTOFF_LEN=2048
LR=3.0e-4
LR_SCHEDULER=cosine
WEIGHT_DECAY=0.1
WARMUP_RATIO=0.1
PRECISION=bf16

# DeepSpeed
DEEPSPEED_STAGE=2

# Logging
LOGGING_STEPS=10
SAVE_STEPS=500
EVAL_STEPS=500
